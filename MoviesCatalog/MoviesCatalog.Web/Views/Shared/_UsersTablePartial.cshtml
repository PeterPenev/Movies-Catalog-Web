
@model IEnumerable<UserViewModel>

<table id="table" class="table table-striped border border-info">
    <thead>
        <tr>
            <th scope="col" width="5%">№</th>
            <th scope="col">Username</th>
            <th scope="col">Reviews</th>
            @if (User.IsInRole("Admin"))
            {
                <th scope="col">Actions</th>
            }

        </tr>
    </thead>
    <tbody>
        @{
            int counter = 1;
        }
        @foreach (var user in Model)
        {
        <tr>
            <td>@counter</td>
            @{
                counter++;
            }
           
            <td>@user.UserName</td>
            <td>@user.NumberOfReviews</td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    <a asp-area="Admin" asp-controller="Users" asp-action="Promote" asp-route-id="@user.Id" class="btn btn-success"><i class="material-icons">Promote</i></a>
                </td>
            }
        </tr>
        }
    </tbody>
</table>