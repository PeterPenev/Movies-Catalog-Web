
@model IEnumerable<UserViewModel>

<table id="table" class="table table-striped border border-info">
    <thead>
        <tr>
            <th scope="col" width="5%">№</th>
            <th scope="col" width="30%">Avatar</th>
            <th scope="col">Username</th>
            <th scope="col">Reviews</th>
            @if (User.IsInRole("Admin"))
            {
                <th scope="col">Actions</th>
            }

        </tr>
    </thead>
    <tbody>
        @{
            int counter = 1;
        }
        @foreach (var user in Model)
        {
        <tr>
            <td>@counter</td>
            @{
                counter++;
            }
            <td class="w3-list-img"><a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id"><img src="~/images/@(user.Avatar ?? "noimage.jpg")" /><span></span></a></td>
            <td><a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id">@user.UserName</a></td>
            <td><a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id">@user.NumberOfReviews</a></td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    <a asp-area="Admin" asp-controller="Users" asp-action="Promote" asp-route-id="@user.Id" class="btn btn-success"><i class="material-icons">Promote</i></a>
                </td>
            }
        </tr>
        }
    </tbody>
</table>