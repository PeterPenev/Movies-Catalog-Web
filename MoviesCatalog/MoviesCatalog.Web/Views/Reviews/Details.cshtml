@model ReviewViewModel

<!DOCTYPE html>
<html lang="en">
<body>
    <div class="single-page-agile-main">
        <div class="container">
            <div class="single-page-agile-info">
                <!-- /movie-browse-agile -->
                <div class="show-top-grids-w3lagile">
                    <div class="col-sm-8 single-left">
                        <div class="song">
                            <div class="song-info">
                                <h3>@Model.MovieTitle</h3>
                            </div>
                            <div class="w3-list-img"><a asp-controller="Movies" asp-action="Details"><img style="border: 5px solid #ff9800" src="~/images/@(Model.MoviePoster ?? "noimage.jpg")" /> <span></span></a></div>
                        </div>
                        <h4 class="padding-custom">Author: <span class="text-orange">@Model.UserName</span></h4>
                        <h4 class="padding-custom">Created On: <span class="text-orange">@Model.CreatedOn.ToString("MMMM dd, yyyy")</span></h4>
                        <div class="agile-info-wthree-box">
                            <form asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id" method="get">
                                @if (Model.CanUserEdit)
                                {
                                    <input type="submit" value="Edit">
                                }
                                <div class="clearfix"> </div>
                            </form>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</body>
</html>




