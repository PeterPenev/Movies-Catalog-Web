@model UserViewModel

<!DOCTYPE html>
<html lang="en">

<body>
    <div class="single-page-agile-main">
        <div class="container">
            <div class="single-page-agile-info">
                <!-- /movie-browse-agile -->
                <div class="show-top-grids-w3lagile">
                    <div class="col-sm-8 single-left">
                        <div class="song">
                            <div class="song-info">
                                <h3>@Model.UserName</h3>
                            </div>
                            <div class="w3-list-img"><a asp-controller="Actors" asp-action="Details"><img style="border: 5px solid #ff9800" src="~/images/@(Model.Avatar ?? "noimage.jpg")"> <span></span></a></div>
                        </div>
                    </div>
                </div><br />
                <div class="clearfix"> </div>
                <div class="all-comments">
                    <div class="all-comments-info">
                        <div class="agile-info-wthree-box">
                            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                @if (this.User.Identity.IsAuthenticated)
                                {
                                    <input type="submit" asp-controller="Actors" asp-action="Promote" asp-route-id="@Model.Id" value="Promote">
                                }
                                <div class="clearfix"> </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>




