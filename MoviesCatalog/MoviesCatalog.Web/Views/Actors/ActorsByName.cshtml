@model ActorIndexViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <title>List of all actors</title>
    <link rel="stylesheet" href="/css/news.css" type="text/css" media="all" />
    <link rel="stylesheet" href="/list-css/list.css" type="text/css" media="all" />
    <link rel="stylesheet" type="text/css" href="/list-css/table-style.css" />
    <link rel="stylesheet" type="text/css" href="/list-css/basictable.css" />
</head>
<body>
    <div class="faq">
        <h4 class="latest-text w3_faq_latest_text w3_latest_text">Actors List</h4>
        <div class="container">
            <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                <ul id="myTab" class="nav nav-tabs" role="tablist">
                    @for (char i = 'A'; i <= 'Z'; i++)
                    {
                        <li role="presentation"><a asp-controller="Actors" asp-action="ActorsByName" asp-route-id="@i" role="tab" id="b-tab" data-toggle="tab" aria-controls="b">@i</a></li>
                    }
                </ul>
                <div id="myTabContent" class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active" id="home" aria-labelledby="home-tab">
                        <div class="agile-news-table">
                            <div class="w3ls-news-result">
                                <h4>Search Results : <span>@Model.ActorsByName.Count()</span></h4>
                            </div>
                            <table id="table-breakpoint">
                                <thead>
                                    <tr>
                                        <th>№</th>
                                        <th>Picture</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="table-breakpoint">
                                    @{
                                        int counter = 1;
                                    }
                                    @foreach (var actor in Model.ActorsByName)
                                    {

                                    <tr>
                                        <td>@counter</td>
                                        @{
                                            counter++;
                                        }
                                        @{
                                            if (actor.Picture == null)
                                            {
                                                <td class="w3-list-img"><a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id"><img src="~/images/noimage.jpg" alt="" /> <span></span></a></td>
                                            }
                                            else
                                            {
                                                <td class="w3-list-img"><a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id"><img src="@actor.Picture" alt="" /> <span></span></a></td>
                                            }
                                        }

                                        <td><a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id">@actor.FirstName</a></td>
                                        <td><a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id">@actor.LastName</a></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>



