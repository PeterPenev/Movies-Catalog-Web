<!DOCTYPE html>
<html lang="en">
<head>
    <title>Create a new actor</title>
    <!-- for-mobile-apps -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="One Movies Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

    <!-- //for-mobile-apps -->
    
    <link href="~/css/custom.css" rel="stylesheet" type="text/css" media="all" />
</head>

<body>
    <div class="row-grey">
        <div class="row" style="margin:3.5%">
            <div class="col-md-4">
                <h3 class="custom-format">Create a new actor</h3>
                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <hr class="hr-new" />
                    <div class="form-group">
                        <label asp-for="FirstName" class="grey"></label>
                        <input asp-for="FirstName" placeholder="Please enter a first name." class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger-orange"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="grey"></label>
                        <input asp-for="LastName" placeholder="Please enter a last name." class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Picture" class="grey"></label>
                        <input asp-for="Picture" placeholder="Please enter an image url." class="form-control" />
                        <span asp-validation-for="Picture" class="text-danger-orange"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Biography" class="grey"></label>
                        <textarea asp-for="Biography" placeholder="Please enter a biography." class="form-control"></textarea>
                        <span asp-validation-for="Biography" class="text-danger-orange"></span>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                    <hr class="hr-new" />
                </form>
            </div>
        </div>
    </div>
</body>
</html>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/js/bootstrap-select.min.js"></script>

    <partial name="_ValidationScriptsPartial" />
}
