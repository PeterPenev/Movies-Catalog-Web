@model ActorViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>
</head>
<body>
    <div class="single-page-agile-main">
        <div class="container">
            <div class="single-page-agile-info">
                <!-- /movie-browse-agile -->
                <div class="show-top-grids-w3lagile">
                    <div class="col-sm-8 single-left">
                        <div class="song">
                            <div class="song-info">
                                <h3>@Model.FirstName @Model.LastName</h3>
                            </div>
                            <div class="w3-list-img"><a asp-controller="Actors" asp-action="Details"><img style="border: 5px solid #ff9800" src="~/images/@(Model.Picture ?? "noimage.jpg")" /> <span></span></a></div>
                        </div>
                        <div class="song-grid-right">
                        </div>
                        <div class="all-comments">
                            @if (Model.Biography != null)
                            {
                                <div>@Model.Biography</div><br />
                            }
                            else
                            {
                                <div>No biogrpahy for this actor added yet.</div>
                            }
                        </div>
                        <div class="agile-info-wthree-box">
                            <form asp-area="Admin" asp-controller="Actors" asp-action="Update" asp-route-id="@Model.Id" method="get">
                                @if (this.User.IsInRole("Admin"))
                                {
                                    <input type="submit" value="Update">
                                }
                                <div class="clearfix"> </div>
                            </form>
                        </div>
                    </div>
                </div>
                @if(Model.MoviesByActor.Count() > 0)
                {
                    <div class="col-md-4 single-right">
                        <h3>Movies with @Model.FirstName  @Model.LastName</h3>
                        <div class="single-grid-right">
                            @foreach (var movie in Model.MoviesByActor)
                            {
                                <div class="single-right-grids">
                                    <div class="col-md-4 single-right-grid-left">
                                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id"><img src="~/images/@(movie.Poster ?? "noimage.jpg")" /></a>
                                    </div>
                                    <div class="col-md-8 single-right-grid-right">
                                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">@movie.Title</a>
                                        <p class="author">"Release date" : @movie.ReleaseDate.ToString("MMMM dd, yyyy")</p>
                                        <p class="views">@movie.NumberOfVotes reviews</p>
                                    </div>
                                    <div class="clearfix"> </div>
                                </div>
                            }
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

    <table id="table_id" class="cell-border compact stripe">
        <thead>
            <tr>
                <th>Column 1</th>
                <th>Column 2</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Row 1 Data 1</td>
                <td>Row 1 Data 2</td>
            </tr>
            <tr>
                <td>Row 2 Data 1</td>
                <td>Row 2 Data 2</td>
            </tr>
        </tbody>
    </table>
    @section Scripts
        {
        @*<script type="text/javascript" src="jQuery-3.3.1/jquery-3.3.1.js"></script>*@
        @*<script>
            $(document).ready(function () {
                $('#myTable').DataTable();
            });
        </script>*@
    }

</body>
</html>



