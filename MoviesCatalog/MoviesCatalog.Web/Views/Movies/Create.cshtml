<!DOCTYPE html>
<html lang="en">
<head>
    <title>Create a new movie</title>
</head>

<body>
    <!-- single -->
    <div class="single-page-agile-main">
        <div class="container">
            <!-- /w3l-medile-movies-grids -->
            <div class="single-page-agile-info">
                <!-- /movie-browse-agile -->
                <div class="show-top-grids-w3lagile">
                    <div class="col-sm-8 single-left">
                        <div class="song">
                            <div class="song-info">
                                <h3>Create a new movie</h3>
                            </div>
                        </div>
                        <div class="all-comments">
                            <div class="all-comments-info">

                                <div class="agile-info-wthree-box">
                                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                        <input asp-for="Title" placeholder="Title" required="">
                                        <input asp-for="Trailer" placeholder="Trailer">
                                        <input asp-for="Poster" placeholder="Poster">
                                        <textarea asp-for="Description" placeholder="Description"></textarea>
                                        <input asp-for="ReleaseDate" placeholder="ReleaseData" required="">                                        
                                        <input type="submit" value="SUBMIT">
                                        <div class="clearfix"> </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

