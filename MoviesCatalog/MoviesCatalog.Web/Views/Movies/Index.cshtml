<!DOCTYPE html>
<html lang="en">
<head>
    <title>List of all actors</title>
    <link rel="stylesheet" href="/css/news.css" type="text/css" media="all" />
    <link rel="stylesheet" href="/list-css/list.css" type="text/css" media="all" />
    <link rel="stylesheet" type="text/css" href="/list-css/table-style.css" />
    <link rel="stylesheet" type="text/css" href="/list-css/basictable.css" />
</head>
<body>
    <div class="faq">
        <h4 class="latest-text w3_faq_latest_text w3_latest_text">Movie List</h4>
        <div class="container">
            <div class="agileits-news-top">
                <ol class="breadcrumb">
                    <li class="nav-item"><a asp-controller="Movies" asp-action="Create">Create new movie</a></li>
                </ol>
            </div>
            <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                <ul id="myTab" class="nav nav-tabs" role="tablist">
                    @for (char i = 'A'; i <= 'Z'; i++)
                    {
                        int id = (int)i;
                        <li role="presentation"><a asp-controller="Movies" asp-action="MoviesByName" asp-route-id="@id" role="tab" id="b-tab" data-toggle="tab" aria-controls="b">@i</a></li>
                    }
                </ul>
                <div id="myTabContent" class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active" id="home" aria-labelledby="home-tab">
                        <div class="agile-news-table">
                            <div class="w3ls-news-result">
                                <h4>Search Results : <span>@Model.Latest10Movies.Count()</span></h4>
                            </div>
                            <table id="table-breakpoint">
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                                <tbody id="table-breakpoint">
                                    @foreach (var movie in Model.Latest10Movies.OrderBy(id => id.Id))
                                    {
                                        <tr>
                                            <td>@movie.Id</td>
                                            <td><a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">@movie.Title</a></td>
                                            <td><a asp-controller="Actors" asp-action="Details" asp-route-id="@movie.Id">@movie.Description</a></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>